{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true, // Important to ignore type issues in node_modules
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonJS",
    "target": "es2020",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "jsx": "preserve",
    "sourceMap": true,
    "inlineSourceMap": false,
    "inlineSources": true,
    "outDir": "./build",
    "rootDir": "./"
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "quoridor.ts", "__tests/**/*.ts"],
  "exclude": ["node_modules"]
}
